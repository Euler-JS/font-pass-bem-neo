{
  "providers": [],
  "phases": {
    "setup": {
      "nixPkgs": ["nodejs", "nginx"],
      "aptPkgs": []
    },
    "install": {
      "cmds": ["npm ci"]
    },
    "build": {
      "cmds": ["npm run build", "cp -r build /build", "cp nginx.conf /etc/nginx/conf.d/default.conf"]
    }
  },
  "start": {
    "cmd": "nginx -g 'daemon off;'"
  }
}
